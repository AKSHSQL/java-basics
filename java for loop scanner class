public class Factorial                   //find factorial of number using for loop.
{
    public static void main(String []args)
    {
        int n,i,fact=1;
        n=Integer.parseInt("3");
        for (i=1;i<=n;i++)
        {
            fact=fact*i;
        }
        System.out.println(fact);
    }
}

