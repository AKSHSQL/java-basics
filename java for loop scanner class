// addition of N numbers enter by user.

import java.util.*;
public class AdditionOfNumbers
{
    public static void main(String[]args)
    {
        int i,n,add=0;
        Scanner sc = new Scanner (System.in);
        System.out.print("enter value ");
        n=sc.nextInt();
        for (i=1;i<=n;i++)
        add=add+i;
        {
            System.out.println(add );
        }
    }
}
