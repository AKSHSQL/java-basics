// 1.main method
package com.project.readFile;

public class MainMethodForConverting {

    public static final String inputfilePath = "/home/malhar/NetBeansProjects/xml-csv/src/main/java/com/project/readFile/";
    public static final String outputfilePath = "/home/malhar/NetBeansProjects/xml-csv/src/main/java/com/project/readFile/";
    public static final String xmlFileName = "021RATN17600302106000.xml";
    public static final String xlsFileName = "021RATN17600302106000.xsl";
    public static final String outputFileName = "021RATN17600302106000.csv";

    public static void main(String[] args) {

        XmlToCsvFileConverter xmlToCsvFileCoverter =  new XmlToCsvFileConverter();
        xmlToCsvFileCoverter.convertXmlToCsvFile(inputfilePath+xmlFileName, inputfilePath+xlsFileName, outputfilePath, outputFileName);
    }


}

